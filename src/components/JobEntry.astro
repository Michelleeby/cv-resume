---
export interface Props {
    title: string;
    company: string;
    dates: string;
    skillsList: string[];
}
const { title, company, dates, skillsList } = Astro.props;
---

<article class="py-8 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
    <header>
        <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
        
        <div class="mt-1 flex flex-col sm:flex-row sm:items-center sm:gap-4 text-lg text-gray-600 dark:text-gray-400">
            <span class="font-medium text-blue-700 dark:text-blue-400">{company}</span>
            <span class="hidden sm:inline">|</span>
            <span class="text-gray-500 dark:text-gray-400">{dates}</span>
        </div>
    </header>

    <div class="mt-4 prose prose-lg prose-blue max-w-none dark:prose-invert">
        <slot />
    </div>

    <!-- Skills "Mini Tag Cloud" -->
    <div class="mt-6">
        <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
            Stack:
        </h4>
        <div class="flex flex-wrap gap-2">
            {skillsList.map(skill => (
                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full shadow-sm dark:bg-gray-800 dark:text-gray-200">
                    {skill}
                </span>
            ))}
        </div>
    </div>
</article>