---
import { Image } from "astro:assets";

import headshot from "../assets/headshot.PNG";

const contact = {
    phone: "(610) 213-2697",
    email: "michelle.elizabeth.byrnes@gmail.com",
    linkedin: "linkedin.com/in/michelleeby"
}
---

<div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
    
    <div class="flex-shrink-0">
        <Image 
            src={headshot} 
            alt="Michelle Byrnes headshot"
            class="w-36 h-36 md:w-48 md:h-48 object-cover rounded-full shadow-lg"
            width="192"
            height="192"
            densities={[1.5, 2]}
            quality="mid"
            loading="eager"
        />
    </div>

    <div class="flex-grow text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100">
            Michelle Byrnes
        </h1>
        
        <p class="mt-2 text-xl md:text-2xl font-medium text-blue-700 dark:text-blue-400">
            Staff software engineer
        </p>
        
        <p class="mt-4 max-w-xl text-lg text-gray-700 dark:text-gray-300">
            With 8+ years of professional experience across multiple industries. Creative problem solver seeking to build reliable solutions at scale.
        </p>

        <div classs="mt-6 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a href={`mailto:${contact.email}`} class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-700 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                {contact.email}
            </a>
            <a href={`https:${contact.linkedin}`} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-700 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" /></svg>
                michelleeby
            </a>
            <a href={`tel:+1${contact.phone.replace(/[()-\s]/g, "")}`} class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-700 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.211-.99-.55-1.34-1.298-.713-2.67-1.22-4.08-1.58a.75.75 0 00-.83.32l-1.42 1.42a16.5 16.5 0 01-6.64-6.64l1.42-1.42a.75.75 0 00.32-.83A11.3 11.3 0 016.12 3.805a1.76 1.76 0 00-1.34-.55H3.375A2.25 2.25 0 001 5.625v1.125Z" /></svg>
                {contact.phone}
            </a>
        </div>
    </div>
</div>