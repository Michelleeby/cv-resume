---
import { Image } from "astro:assets";

import headshot from "../assets/headshot.PNG";

const contact = {
    email: "michelle.elizabeth.byrnes@gmail.com",
    linkedin: "linkedin.com/in/michelleeby",
    github: "github.com/michelleeby"
}
---

<div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
    
    <div class="flex-shrink-0">
        <Image 
            src={headshot} 
            alt="Michelle Byrnes headshot"
            class="w-36 h-36 md:w-48 md:h-48 object-cover rounded-full shadow-lg"
            width="192"
            height="192"
            densities={[1.5, 2]}
            quality="mid"
            loading="eager"
            fetchpriority="high"
        />
    </div>

    <div class="flex-grow text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100">
            Michelle Byrnes
        </h1>
        
        <p class="mt-2 text-xl md:text-2xl font-medium text-blue-700 dark:text-blue-400">
            Staff software engineer
        </p>
        
        <p class="mt-4 max-w-xl text-lg text-gray-700 dark:text-gray-300">
            With 8+ years of professional experience across multiple industries. Creative problem solver seeking to build reliable solutions at scale.
        </p>

        <div classs="mt-6 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a href={`mailto:${contact.email}`} class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-700 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                {contact.email}
            </a>
