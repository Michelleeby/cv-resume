---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Michelle Byrnes - Staff Software Engineer" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.PNG" />
		
		<!-- Import a clean, professional font (Inter) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100 antialiased">
		
		<!-- The Navigation component is placed here, outside the main content -->
		<Navigation />

		<!-- 'main' will be our centered content column -->
		<main class="max-w-4xl mx-auto p-4 md:p-8">
			<!-- The <slot /> is where Astro injects our page content (from index.astro) -->
			<slot />
		</main>

		<style is:global>
			/* Set the base font for the whole site */
			body {
				font-family: 'Inter', sans-serif;
			}

			/* This is the magic for smooth-scrolling */
			html {
				scroll-behavior: smooth;
			}
		</style>
	</body>
</html>